<section class="search-background">
  <div class="search-bar">
    <input type="num" placeholder="Search by zip code"/>
    <input type="submit" value="Search" />
  </div>
</section>

<div class="container">
  <% for listing in @listings %>
  <div class="listing" hidden="">
    <h2><%= listing.title %></h2>
    <p class="body">
      <%= listing.body %>
    </p>
    <p class="zip">
      <%= listing.zip %>
    </p>
    <% for photo in listing.photos %>
      <%= image_tag photo.picture.url(:medium) %>
    <% end %>
  </div>
  <% end %>
</div>